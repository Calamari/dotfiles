# Media keys
bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id amixer -c 0 -- set Master playback 2%+ &&\
                pactl set-sink-volume $(pactl list short sinks | grep RUNNING | awk '//{print $2}') +2% &&\
                pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -c 0 -- set Master playback 10%+ &&\
                pactl set-sink-volume $(pactl list short sinks | grep RUNNING | awk '//{print $2}') +10% &&\
                pkill -SIGRTMIN+10 i3blocks
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id amixer -c 0 -- set Master playback 2%- &&\
                pactl set-sink-volume $(pactl list short sinks | grep RUNNING | awk '//{print $2}') -2% &&\
                pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -c 0 -- set Master playback 10%- &&\
                pactl set-sink-volume $(pactl list short sinks | grep RUNNING | awk '//{print $2}') -10% &&\
                pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioMute exec --no-startup-id amixer -q set Master toggle && pkill -SIGRTMIN+10 i3blocks

bindsym XF86MonBrightnessUp exec --no-startup-id scripts/screen_brightness 100
bindsym XF86MonBrightnessDown exec --no-startup-id scripts/screen_brightness -100

bindsym XF86Display exec xrandr --auto
bindsym XF86Tools exec --no-startup-id scripts/musicctl play


